<!-- app/views/vocabularies/learn.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header -->
      <div class="text-center my-4">
        <h1 class="h2 fw-bold text-dark">
          <i class="bi bi-brain me-2 text-primary"></i>
          Vokabeln lernen
        </h1>
      </div>

      <!-- Check if user has any vocabularies to learn -->
      <% if @vocabularies_by_language.empty? %>
        <div class="card shadow-sm border-0">
          <div class="card-body text-center py-5">
            <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
            <h4 class="text-muted mt-3">Noch keine Vokabeln zum Lernen</h4>
            <p class="text-muted mb-4">Beginne mit dem Übersetzen und Speichern deiner ersten Vokabeln!</p>
            <%= link_to root_path, class: "btn btn-primary btn-lg" do %>
              <i class="bi bi-translate me-2"></i>
              Jetzt übersetzen
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Language Cards -->
        <div class="row g-4 justify-content-center">
          <% @vocabularies_by_language.each do |language, stats| %>
            <div class="col-md-6">
              <div class="card h-100 shadow-sm border-0" style="transition: transform 0.2s;">
                <div class="card-body p-3">
                  <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 me-3 d-flex justify-content-center align-items-center" style="height: 52px; width: 52px;">
                      <i class="bi bi-flag text-primary d-block" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                      <h5 class="card-title mb-1 fw-bold"><%= @language_names[language] %></h5>
                      <small class="text-muted"><%= pluralize(stats[:total], 'Vokabel', 'Vokabeln') %></small>
                    </div>
                  </div>

                  <!-- Progress Stats -->
                  <div class="row g-3 mb-4">
                    <div class="col-4 text-center">
                      <div class="bg-danger bg-opacity-10 rounded p-2">
                        <div class="h4 mb-0 text-danger fw-bold"><%= stats[:open] %></div>
                        <small class="text-muted">Offen</small>
                      </div>
                    </div>
                    <div class="col-4 text-center">
                      <div class="bg-warning bg-opacity-10 rounded p-2">
                        <div class="h4 mb-0 text-warning fw-bold"><%= stats[:learning] %></div>
                        <small class="text-muted">Am Lernen</small>
                      </div>
                    </div>
                    <div class="col-4 text-center">
                      <div class="bg-success bg-opacity-10 rounded p-2">
                        <div class="h4 mb-0 text-success fw-bold"><%= stats[:learned] %></div>
                        <small class="text-muted">Gelernt</small>
                      </div>
                    </div>
                  </div>

                  <!-- Progress Bar -->
                  <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <small class="text-muted">Fortschritt</small>
                      <small class="text-muted">
                        <%= ((stats[:learned].to_f / stats[:total]) * 100).round(1) %>%
                      </small>
                    </div>
                    <div class="progress" style="height: 6px;">
                      <div class="progress-bar bg-success"
                           style="width: <%= ((stats[:learned].to_f / stats[:total]) * 100).round(2) %>%;">
                      </div>
                    </div>
                  </div>

                  <!-- Learn Button -->
                  <% if stats[:to_learn] > 0 %>
                    <%= link_to learn_language_vocabularies_path(language: language),
                        class: "btn btn-primary w-100" do %>
                      <i class="bi bi-play-fill me-2"></i>
                      <%= pluralize(stats[:to_learn], 'Vokabel', 'Vokabeln') %> lernen
                    <% end %>
                  <% else %>
                    <div class="btn btn-success w-100 disabled">
                      <i class="bi bi-check-circle me-2"></i>
                      Alle Vokabeln gelernt!
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Back to Vocabularies -->
        <div class="text-center mt-5">
          <%= link_to vocabularies_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-list-ul me-1"></i>
            Vokabeln bearbeiten
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.hover-card:hover {
  transform: translateY(-5px);
}
</style>
