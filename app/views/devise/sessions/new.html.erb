<!-- app/views/devise/sessions/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm login-card-grid">
        <div class="card-header bg-primary text-white text-center login-card-header">
          <h3 class="mb-0">
            <i class="bi bi-box-arrow-in-right me-2"></i>
            Bei Repetify anmelden
          </h3>
        </div>
        <div class="card-body p-4 login-card-body">
          <div class="login-flash-messages">
            <!-- Flash-Messages fÃ¼r Authentifizierungsfehler -->
            <% flash.each do |type, message| %>
              <% unless message == "You need to sign in or sign up before continuing." %>
                <% if type == 'alert' %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                  </div>
                <% elsif type == 'notice' %>
                  <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                  </div>
                <% end %>
              <% end %>
            <% end %>
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>

          <div class="login-form-area">
            <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |form| %>
              <div class="mb-3">
                <%= form.label :email, "E-Mail Adresse", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="bi bi-envelope"></i>
                  </span>
                  <%= form.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "form-control",
                    placeholder: "deine@email.com",
                    required: true %>
                </div>
              </div>
              <div class="mb-3">
                <%= form.label :password, "Passwort", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="bi bi-lock"></i>
                  </span>
                  <%= form.password_field :password,
                    autocomplete: "current-password",
                    class: "form-control",
                    placeholder: "Dein Passwort",
                    required: true %>
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="mb-3 form-check">
                  <%= form.check_box :remember_me, class: "form-check-input" %>
                  <%= form.label :remember_me, "Angemeldet bleiben", class: "form-check-label" %>
                </div>
              <% end %>
              <div class="d-grid mb-3">
                <%= form.submit "Anmelden", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          </div>

          <div class="login-links-area text-center">
            <div class="mb-2">
              <%= link_to "Noch kein Account? Hier registrieren", new_user_registration_path,
                class: "btn btn-outline-success" %>
            </div>

            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <small class="text-muted">
                <%= link_to "Passwort vergessen?", new_user_password_path, class: "text-decoration-none" %>
              </small>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>