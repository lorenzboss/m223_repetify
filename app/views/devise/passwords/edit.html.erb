<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h3 class="mb-0">
            <i class="bi bi-key me-2"></i>
            Neues Passwort setzen
          </h3>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="alert alert-info" role="alert">
              <small>Wähle ein neues, sicheres Passwort für dein Konto.</small>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Neues Passwort", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-lock"></i>
                </span>
                <%= f.password_field :password,
                  autofocus: true,
                  autocomplete: "new-password",
                  class: "form-control",
                  placeholder: "Neues Passwort eingeben",
                  required: true %>
              </div>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  <i class="bi bi-info-circle me-1"></i>
                  Mindestens <%= @minimum_password_length %> Zeichen
                </small>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Passwort bestätigen", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-lock-fill"></i>
                </span>
                <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  class: "form-control",
                  placeholder: "Passwort wiederholen",
                  required: true %>
              </div>
            </div>

            <div class="d-grid mb-3">
              <%= f.submit "Passwort ändern", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= link_to "Zurück zur Anmeldung", new_user_session_path,
              class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
