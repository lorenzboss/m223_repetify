<!-- app/views/vocabularies/learn_language.html.erb -->
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header -->
      <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
          <h2 class="h3 fw-bold text-dark mb-1">
            <i class="bi bi-flag me-2 text-primary"></i>
            <%= @language_name %> lernen
          </h2>
          <p class="text-muted mb-0">
            <span id="current-card">1</span> von <%= @vocabularies.count %> Karten
          </p>
        </div>
        <div>
          <%= link_to learn_vocabularies_path, class: "btn btn-outline-secondary btn-sm" do %>
            <i class="bi bi-arrow-left me-1"></i>
            Zur√ºck
          <% end %>
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="progress mb-4" style="height: 8px;">
        <div class="progress-bar bg-primary" id="progress-bar" style="width: 0%;"></div>
      </div>

      <!-- Flashcard Container -->
      <div class="flashcard-container" id="flashcard-container">
        <% @vocabularies.each_with_index do |vocabulary, index| %>
          <div class="flashcard-wrapper <%= 'active' if index == 0 %>"
               data-vocab-id="<%= vocabulary.id %>"
               data-index="<%= index %>">

            <!-- Status and Instructions above card -->
            <div class="mb-1 d-flex justify-content-between">
              <span class="badge bg-opacity-50 text-muted <%= vocabulary.status == 'open' ? 'bg-danger' : 'bg-warning' %> status-badge mb-2">
                <%= vocabulary.status_german %>
              </span>
              <p class="text-muted mb-0" id="instruction-<%= vocabulary.id %>">
                <small><i class="bi bi-hand-index me-1"></i>Auf die Karte klicken zum Umdrehen</small>
              </p>
            </div>

            <!-- Flashcard -->
            <div class="flashcard" id="flashcard-<%= vocabulary.id %>" onclick="toggleCard(<%= vocabulary.id %>)" style="cursor: pointer;">
              <!-- Front of card (German translation) -->
              <div class="flashcard-front">
                <div class="card shadow border-0 h-100">
                  <div class="card-body d-flex flex-column justify-content-center text-center p-5">
                    <!-- Only German Word -->
                    <h3 class="fw-bold text-dark mb-0" style="font-size: 2rem;">
                      <%= vocabulary.target_text %>
                    </h3>
                  </div>
                </div>
              </div>

              <!-- Back of card (Original language) -->
              <div class="flashcard-back">
                <div class="card shadow border-0 h-100">
                  <div class="card-body d-flex flex-column justify-content-between text-center p-5">
                    <!-- Empty space for top -->
                    <div></div>

                    <!-- Only Original Word - centered -->
                    <h3 class="fw-bold text-primary mb-0" style="font-size: 2rem;">
                      <%= vocabulary.source_text %>
                    </h3>

                    <!-- Answer buttons at bottom -->
                    <div class="d-flex gap-3 justify-content-center">
                      <button class="btn btn-danger btn-lg flex-fill"
                              onclick="answerCard(<%= vocabulary.id %>, false)">
                        <i class="bi bi-x-lg me-2"></i>
                        Falsch
                      </button>
                      <button class="btn btn-success btn-lg flex-fill"
                              onclick="answerCard(<%= vocabulary.id %>, true)">
                        <i class="bi bi-check-lg me-2"></i>
                        Richtig
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Completion Screen (hidden initially) -->
      <div class="completion-screen text-center" id="completion-screen" style="display: none;">
        <div class="card shadow border-0">
          <div class="card-body py-5">
            <div class="text-success mb-4">
              <i class="bi bi-trophy" style="font-size: 4rem;"></i>
            </div>
            <h3 class="fw-bold text-dark mb-3">Gut gemacht!</h3>
            <p class="text-muted mb-4">Du hast alle Karten dieser Lerneinheit abgeschlossen.</p>
            <div class="d-flex gap-3 justify-content-center">
              <%= link_to learn_vocabularies_path, class: "btn btn-primary btn-lg" do %>
                <i class="bi bi-arrow-repeat me-2"></i>
                Weitere Sprachen lernen
              <% end %>
              <%= link_to vocabularies_path, class: "btn btn-outline-secondary btn-lg" do %>
                <i class="bi bi-collection me-2"></i>
                Meine Vokabeln
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS -->
<style>
.flashcard-container {
  min-height: 400px;
  position: relative;
}

.flashcard-wrapper {
  position: absolute;
  width: 100%;
  display: none;
}

.flashcard-wrapper.active {
  display: block;
}

.flashcard {
  perspective: 1000px;
  height: 400px;
}

.flashcard-front,
.flashcard-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: transform 0.6s;
  border-radius: 15px;
}

.flashcard-back {
  transform: rotateY(-180deg);
}

.flashcard.flipped .flashcard-front {
  transform: rotateY(180deg);
}

.flashcard.flipped .flashcard-back {
  transform: rotateY(0deg);
}

.card {
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
}

.status-badge {
  font-size: 0.75rem;
  letter-spacing: 0.5px;
}

.btn-lg {
  padding: 12px 24px;
  font-weight: 600;
  border-radius: 10px;
}

.progress {
  border-radius: 10px;
}

.completion-screen .card {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}
</style>

<!-- JavaScript -->
<script>
// Wrap everything in a function to avoid global variable conflicts with Turbo
(function() {
  // Reset variables on each page load
  let currentCardIndex = 0;
  const totalCards = <%= @vocabularies.count %>;
  let completedCards = 0;

  // Make functions globally accessible by attaching to window
  window.toggleCard = function(vocabId) {
    const flashcard = document.getElementById(`flashcard-${vocabId}`);
    flashcard.classList.toggle('flipped');
  };

  window.answerCard = function(vocabId, correct) {
    // Update vocabulary status via AJAX
    fetch(`/vocabularies/update_learning_status`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({
        id: vocabId,
        correct: correct
      })
    })
    .then(response => response.text())
    .then(newStatusGerman => {
      // Don't update the status badge visually - just let the database update happen
      // The status should only show the initial status of each card
      console.log(`Vocabulary ${vocabId} status updated to: ${newStatusGerman}`);
    })
    .catch(error => console.error('Error:', error));

    // Move to next card immediately without visual status update
    nextCard();
  };

  function nextCard() {
    currentCardIndex++;
    completedCards++;

    // Update progress
    updateProgress();

    if (currentCardIndex >= totalCards) {
      // Show completion screen
      document.getElementById('flashcard-container').style.display = 'none';
      document.getElementById('completion-screen').style.display = 'block';
      return;
    }

    // Hide current card and show next
    document.querySelectorAll('.flashcard-wrapper').forEach(wrapper => {
      wrapper.classList.remove('active');
    });

    const nextWrapper = document.querySelector(`[data-index="${currentCardIndex}"]`);
    if (nextWrapper) {
      nextWrapper.classList.add('active');
    }

    // Update card counter
    document.getElementById('current-card').textContent = currentCardIndex + 1;
  }

  function updateProgress() {
    const progressPercent = (completedCards / totalCards) * 100;
    document.getElementById('progress-bar').style.width = progressPercent + '%';
  }

  function getStatusClassFromGerman(statusGerman) {
    switch(statusGerman) {
      case 'Offen': return 'bg-danger';
      case 'Am Lernen': return 'bg-warning';
      case 'Gelernt': return 'bg-success';
      default: return 'bg-secondary';
    }
  }

  // Make getStatusClassFromGerman globally accessible for answerCard
  window.getStatusClassFromGerman = getStatusClassFromGerman;

})(); // Immediately invoke to avoid global scope pollution
</script>
