<!-- app/views/devise/passwords/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h3 class="mb-0">
            <i class="bi bi-person-check me-2"></i>
            Passwort zurücksetzen
          </h3>
        </div>
        <div class="card-body p-4">
          <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |form| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="alert alert-info" role="alert">
              <small>Gib deine E-Mail Adresse ein und wir senden dir einen Link zum Zurücksetzen deines Passworts.</small>
            </div>

            <div class="mb-3">
              <%= form.label :email, "E-Mail Adresse", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-envelope"></i>
                </span>
                <%= form.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-control",
                  placeholder: "deine@email.com",
                  required: true %>
              </div>
            </div>

            <div class="d-grid mb-3">
              <%= form.submit "Reset-Link senden", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= link_to "Zurück zur Anmeldung", new_user_session_path,
              class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>