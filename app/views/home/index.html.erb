<!-- app/views/home/index.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Willkommen bei Repetify!</h1>
        </div>
        <div class="card-body">
          <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">🎉 Authentication funktioniert!</h4>
            <p>Du bist erfolgreich eingeloggt als: <strong><%= current_user.email %></strong></p>
            <hr>
            <p class="mb-0">
              Hier wird später dein persönlicher Vokabeltrainer erscheinen.
            </p>
          </div>

          <div class="text-center mt-4">
            <%= link_to "Logout", destroy_user_session_path,
              data: { "turbo-method": :delete },
              class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>