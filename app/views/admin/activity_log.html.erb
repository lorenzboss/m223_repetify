<!-- app/views/admin/activity_log.html.erb -->
<div class="container py-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col">
      <div class="d-sm-flex align-items-center justify-content-between">
        <div>
          <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-clock-history me-2 text-primary"></i>
            Aktivitätsprotokoll
          </h1>
          <p class="text-muted mb-0">Systemweite Änderungen und Aktivitäten</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Timeline -->
  <div class="card shadow">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="bi bi-list me-2"></i>
        Letzte Aktivitäten
      </h6>
      <small class="text-muted">
        <%= @versions.count %> Einträge gefunden
      </small>
    </div>
    <div class="card-body">
      <% if @versions.any? %>
        <div class="timeline">
          <% @versions.each_with_index do |version, _| %>
            <div class="timeline-item mb-4">
              <!-- Content -->
              <div class="flex-grow-1">
                <div class="card border-0 shadow-sm">
                  <div class="card-body p-3">
                    <!-- Header with Action Badge and readable summary -->
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <div class="d-flex align-items-center">
                          <span class="badge <%= activity_badge_class(version.event) %> me-2">
                            <%= version.event.upcase %>
                          </span>
                        <strong class="text-dark"><%= get_readable_change_summary(version) %></strong>
                      </div>
                      <small class="text-muted">
                        <%= version.created_at.strftime("%d.%m.%Y um %H:%M:%S") %>
                      </small>
                    </div>

                    <!-- Details -->
                    <div class="mb-2">
                      <small class="text-muted d-block">
                        <i class="bi bi-tag me-1"></i>
                        <%= version.item_type %>
                      </small>
                      <small class="text-muted d-block">
                        <i class="bi bi-hash me-1"></i>
                        ID: <code><%= version.item_id %></code>
                      </small>
                      <% if version.whodunnit %>
                        <small class="text-muted d-block">
                          <i class="bi bi-person me-1"></i>
                          <% user = User.find_by(id: version.whodunnit) %>
                          <% if user %>
                            <%= user.email %>
                          <% else %>
                            Benutzer ID: <%= version.whodunnit %>
                          <% end %>
                        </small>
                      <% end %>
                    </div>

                    <!-- Expandable sections for changes and object -->
                    <div class="mt-3">
                      <% if version.object.present? %>
                        <!-- Raw Complete Object Section -->
                        <div class="mb-2">
                          <button class="btn btn-sm btn-outline-secondary" type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#raw-object-<%= version.id %>"
                                  aria-expanded="false">
                            <i class="bi bi-database me-1"></i>
                            Record
                          </button>
                          <div class="collapse mt-2" id="raw-object-<%= version.id %>">
                            <div class="card card-body bg-light p-2">
                              <h6 class="text-muted mb-2">
                                <i class="bi bi-clock-history me-1"></i>
                                Daten vor der Änderung:
                              </h6>
                              <%= render_raw_activity_object(version) %>
                            </div>
                          </div>
                        </div>
                      <% end %>

                      <% if version.object_changes.present? %>
                        <!-- Raw Changes Section -->
                        <div>
                          <button class="btn btn-sm btn-outline-primary" type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#raw-changes-<%= version.id %>"
                                  aria-expanded="false">
                            <i class="bi bi-database-up me-1"></i>
                            Änderungen
                          </button>
                          <div class="collapse mt-2" id="raw-changes-<%= version.id %>">
                            <div class="card card-body bg-light p-2">
                              <h6 class="text-muted mb-2">
                                <i class="bi bi-arrow-right  me-1"></i>
                                Änderungen (vorher → nachher):
                              </h6>
                              <%= render_raw_activity_changes(version) %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-clock-history text-muted" style="font-size: 3rem;"></i>
          <h5 class="text-muted mt-3">Keine Aktivitäten gefunden</h5>
          <p class="text-muted">Es wurden noch keine Systemänderungen aufgezeichnet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Custom Styles for Activity Log -->
<style>
    .timeline {
        position: relative;
    }

    .timeline-item {
        position: relative;
    }

    .card {
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-1px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .badge {
        font-size: 0.7rem;
        font-weight: 600;
    }

    code {
        font-size: 0.875rem;
        background-color: #f8f9fa;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
    }

    .collapse {
        transition: all 0.35s ease;
    }

    .btn-outline-primary:hover, .btn-outline-secondary:hover {
        transform: translateY(-1px);
    }
</style>
