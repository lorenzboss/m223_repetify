{
  "name": "app",
  "private": "true",
  "scripts": {
    "build:css:compile": "sass ./app/assets/stylesheets/app.scss:./app/assets/builds/app.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/app.css --use=autoprefixer --output=./app/assets/builds/app.css",
    "build:css": "npm run build:css:compile && npm run build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"npm run build:css\""
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "nodemon": "^3.1.10",
    "sass": "^1.92.1",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16"
  }
}
